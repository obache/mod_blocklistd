##
##  Makefile -- Build procedure for sample blocklistd Apache module
##  Autogenerated via ``apxs -n blocklistd -g''.
##

builddir=@builddir@
srcdir=@srcdir@
top_srcdir=@HTTPD_INSTALLBUILDDIR@/..
top_builddir=@HTTPD_INSTALLBUILDDIR@/..
include @HTTPD_INSTALLBUILDDIR@/special.mk

#   the used tools
APACHECTL=apachectl

#   additional defines, includes and libraries
#DEFS=@DEFS@
INCLUDES=-I$(includedir)
LIBS=@LIBS@

#   the default target
all: local-shared-build

#   install the shared object file into Apache 
install: install-modules-yes

#   cleanup
clean:
	-rm -f mod_blocklistd.o mod_blocklistd.lo mod_blocklistd.slo mod_blocklistd.la 

#   simple test
test: reload
	lynx -mime_header http://localhost/blocklistd

#   install and activate shared object by reloading Apache to
#   force a reload of the shared object file
reload: install restart

#   the general Apache start/restart/stop
#   procedures
start:
	$(APACHECTL) start
restart:
	$(APACHECTL) restart
stop:
	$(APACHECTL) stop

reverse-gen-src: mod_blocklistd.c
	-mv -f $(srcdir)/mod_blocklistd.c.in $(srcdir)/mod_blocklistd.c.in~
	sed -e 's/blacklist\.h/@BLOCKLIST_IMPL_TMP.h/' \
	    -e 's/blacklist_sa/@BLOCKLIST_IMPL_TMP_sa/' \
	    -e 's/BLOCKLIST_IMPL_TMP/BLOCKLIST_IMPL@/' \
	    mod_blocklistd.c > $(srcdir)/mod_blocklistd.c.in
